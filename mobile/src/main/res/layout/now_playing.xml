<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Quran.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:padding="0dp"
    android:theme="@style/Theme.Quran.AppWidgetContainer">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/chapter_001"
        android:tintMode="multiply"
        app:tint="#22ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:elevation="200dp"
            android:id="@+id/chapter_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/chapter_001" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chapter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/chapter_name"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/chapter_image" />

                <TextView
                    android:id="@+id/reciter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/reciter_name"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/chapter_image"
                    app:layout_constraintTop_toBottomOf="@id/chapter_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/chapter_previous"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:src="@drawable/media_skip_previous"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/chapter_play"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:elevation="50dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:src="@drawable/media_play"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/chapter_next"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:src="@drawable/media_skip_next"
                    app:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>